#!/bin/sh
#----------------------------------------------------------------
# Take a dump of a mysql database. If the second param isn't there the sqlfile will be 
# named after the first param.
#
# Examples:
# $ sqldown PASSWORD files files

USAGE_TEXT="sqldown PASSWORD DATABASENAME FILENAME"
REQUIRED_ARGUMENT_COUNT=3
. countargs

mysqldump -uroot -p"$1" $3 > $3.sql
