## Localhost is needed because otherwise you can't do squizzle sticks.
<VirtualHost *:80>
    ServerAdmin webmaster@dummy-host2.example.com
    DocumentRoot "/var/www/"
    ServerName localhost
    #ErrorLog "/usr/local/var/log/apache2/dummy-host2.example.com-error_log"
    #CustomLog "/usr/local/var/log/apache2/dummy-host2.example.com-access_log" common
</VirtualHost>

<VirtualHost *:80>
  ServerAdmin webmaster@dummy-host2.example.com
  DocumentRoot "/var/www/corepub"
  ServerName corepub.site
  #ErrorLog "/usr/local/var/log/apache2/dummy-host2.example.com-error_log"
  #CustomLog "/usr/local/var/log/apache2/dummy-host2.example.com-access_log" common
</VirtualHost>

