#!/bin/sh
# Rebuild this site from a sql file.

. $HOME/.dotfiles/config/bash_alias

WORKING_DIRECTORY=${PWD##*/}

drush -y sql-drop
drush -y site-install \
    standard \
    --account-name=root --account-pass=root \
    --db-url=mysql://root:root@localhost/$WORKING_DIRECTORY

# Download & install the modules
drush dl -n admin_menu coder devel better_perms module_filter pathauto token
drush -y en coder coder_review admin_menu dblog devel_generate
drush -y dis toolbar overlay

# Clear that cache!
drush cc all

