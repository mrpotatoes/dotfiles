#!/bin/sh

. noargs

# Make sure they are allowed to do what they need to do.
. ${HOME}/.dotfiles/config/bash/bash_functions
check_root
    
# THE ACTUAL PROGRAM ---------------------------------------------------------------------
case "$1" in
  'st' | 'start' ) 
    apachectl start
    sql start;;
    
  'sp' | 'stop')
    apachectl stop
    sql stop;;

  'rs' | 'restart')
    apachectl restart
    sql stop
    sql start;;
    
  'fs' | 'fullstatus')
    apachectl fullstatus;;
esac
