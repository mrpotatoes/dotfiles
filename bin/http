#!/bin/bash

. noargs

# Make sure they are allowed to do what they need to do.
. ${HOME}/.dotfiles/config/bash_functions
check_root
    
# THE ACTUAL PROGRAM ---------------------------------------------------------------------
case "$1" in
  'st' | 'start' ) 
    apachectl start;;
    
  'sp' | 'stop')
    apachectl stop;;

  'rs' | 'restart')
    apachectl restart;;
    
  'fs' | 'fullstatus')
    apachectl fullstatus;;
esac
